@model BlackShopHeaderTextModel
@inject IWorkContext  workContext
<div class="topbar-slider">
    @Html.Raw(Model.HomePageHeaderText)
</div>

<script asp-location="Footer">
    $(".topbar-slider").slick({
        infinite: true,
        autoplay: true,
        dots: false,
        arrows: false,
        slidesToShow: 1,
        slidesToScroll: -1,
        rtl: @((await workContext.GetWorkingLanguageAsync()).Rtl.ToString().ToLower()),
        slidesToScroll: 1,
    });
</script>